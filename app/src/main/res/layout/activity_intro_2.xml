<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/intro2_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/intro_2_oval_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/intro_oval_top_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:background="@drawable/intro2_oval20"
            android:layout_height="@dimen/intro_oval_top_size"
            android:layout_width="@dimen/intro_oval_top_size"
            android:layout_marginRight="@dimen/intro_oval_top_size"
            android:layout_gravity="center"/>

        <View
            android:background="@drawable/intro2_oval60"
            android:layout_height="@dimen/intro_oval_top_size"
            android:layout_width="@dimen/intro_oval_top_size"
            android:layout_marginRight="@dimen/intro_oval_top_size"
            android:layout_gravity="center"/>

        <View
            android:background="@drawable/intro2_oval20"
            android:layout_height="@dimen/intro_oval_top_size"
            android:layout_width="@dimen/intro_oval_top_size"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/intro_2_text_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/intro2_top_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="@dimen/intro2_top_width"
            android:layout_height="@dimen/intro2_top_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:src="@drawable/intro2_text"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/intro2_img_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/intro2_graphic_height"
        android:src="@drawable/intro_ox"
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        />

    <RelativeLayout
        android:id="@+id/start_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/intro_bottom_margin"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/go_to_intro2"
            android:layout_width="@dimen/intro_img_size"
            android:layout_height="@dimen/intro_img_size"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:src="@drawable/intro2_start_btn"/>

        <TextView
            android:layout_below="@id/go_to_intro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#66000000"
            android:textSize="@dimen/intro_text_size"
            android:text="다음으로"
            />

    </RelativeLayout>


</RelativeLayout>