<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transitions_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/progress_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10" >
        <ImageView
            android:id="@+id/progress_top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/progress"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/center_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:weightSum="1"
        android:orientation="vertical"
        >


    <LinearLayout
        android:id="@+id/center_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/center_top_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fleax_main"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/center_bottom_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/fleax_main"
            />
    </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/ad_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:background="@color/color_concrete" >
        <include
            android:id="@+id/layout_ad_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ad_bottom_layout_height"
            android:layout_weight="1"
            android:layout_gravity="center"
            layout="@layout/layout_ad_bottom" />
    </LinearLayout>

</LinearLayout>