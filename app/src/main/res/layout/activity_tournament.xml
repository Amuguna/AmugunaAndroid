                android:id="@+id/img_16"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:layout_alignLeft="@+id/img_16_back"
                android:background="@drawable/tournament_oval_black"
                android:layout_gravity="center_horizontal"
                />
            <TextView
                android:id="@+id/tv16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16강"
                android:textSize="@dimen/tournament_progress_text_size"
                android:textColor="#FFFFFF"
                android:layout_below="@id/img_16_back"
                android:gravity="center_horizontal"
                />
        </RelativeLayout>
        <RelativeLayout
