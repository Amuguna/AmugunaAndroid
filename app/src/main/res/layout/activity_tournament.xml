<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_black"
    >

    <include
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        layout="@layout/top_menu_bar"
        />
    <View
        android:id="@+id/result_dividing"
        android:layout_below="@id/top_menu"
        android:background="#33D8D8D8"
        android:layout_height="@dimen/top_menu_border"
        android:layout_width="fill_parent"/>


    <FrameLayout
        android:id="@+id/frmalayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        android:layout_marginTop="@dimen/top_menu_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/round_bottom_total_margin_value"
        >
        <View
            android:background="#66616161"
            android:layout_height="@dimen/tournament_progress_line_height"
            android:layout_width="@dimen/tournament_progress_line_width"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/round_top_margin_value"

            >
            <View
                android:id="@+id/img_16_back"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:background="@drawable/tournament_oval16"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/round_margin_value"

                />
            <View
                android:id="@+id/img_8_back"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:background="@drawable/tournament_oval8"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/round_margin_value"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
            <View
                android:id="@+id/img_4_back"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:background="@drawable/tournament_oval4"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/round_margin_value"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
            <View
                android:id="@+id/img_2_back"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:background="@drawable/tournament_oval2"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/round_top_margin_value"
            >
            <View
                android:id="@+id/img_16"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:layout_alignLeft="@+id/img_16_back"
                android:background="@drawable/tournament_oval_black"
                android:layout_gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginRight="@dimen/round_margin_value"
                />
            <View
                android:id="@+id/img_8"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:layout_alignLeft="@+id/img_8_back"
                android:background="@drawable/tournament_oval_black"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/round_margin_value"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
            <View
                android:id="@+id/img_4"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:layout_alignLeft="@+id/img_4_back"
                android:background="@drawable/tournament_oval_black"
                android:layout_gravity="center_horizontal"
                android:layout_marginRight="@dimen/round_margin_value"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
            <View
                android:id="@+id/img_2"
                android:layout_width="@dimen/tournament_progress_oval_size"
                android:layout_height="@dimen/tournament_progress_oval_size"
                android:layout_alignLeft="@+id/img_2_back"
                android:background="@drawable/tournament_oval_black"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/round_margin_value"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/round_top_margin_text_value"

            >
            <TextView
                android:id="@+id/tv16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16강"
                android:textSize="@dimen/tournament_progress_text_size"
                android:textColor="#FFFFFF"
                android:layout_marginRight="@dimen/round_margin_text_value"
                />
            <TextView
                android:id="@+id/tv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8강"
                android:textSize="@dimen/tournament_progress_text_size"
                android:textColor="#FFFFFF"


                android:layout_marginRight="@dimen/round_margin_text_value"
                android:layout_marginLeft="@dimen/round_margin_text_value"
                />
            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4강"
                android:textSize="@dimen/tournament_progress_text_size"
                android:textColor="#FFFFFF"

                android:layout_marginRight="@dimen/round_margin_text_value"
                android:layout_marginLeft="@dimen/round_margin_text_value"
                />
            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="결승"
                android:textSize="@dimen/tournament_progress_text_size"
                android:textColor="#FFFFFF"

                android:layout_marginLeft="@dimen/round_margin_text_value"
                />
        </LinearLayout>
    </FrameLayout>


    <LinearLayout
        android:id="@+id/firstLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tournament_bottom_margin"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:id="@+id/center_top_img"
                android:layout_width="@dimen/tournament_img_width"
                android:layout_height="@dimen/tournament_img_height"
                android:layout_centerHorizontal="true"
                />

            <View
                android:id="@+id/img_bg_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tournament_img_height"
                android:background="@drawable/img_bg"
                />
            <TextView
                android:id="@+id/center_top_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_bg_top"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/tournament_img_text_margin"
                android:textSize="@dimen/tournament_img_text_size"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/tournament_img_between"
            >
            <ImageView
                android:id="@+id/center_bottom_img"
                android:layout_width="@dimen/tournament_img_width"
                android:layout_height="@dimen/tournament_img_height"
                android:layout_centerHorizontal="true"
                />

            <View
                android:id="@+id/img_bg_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tournament_img_height"
                android:background="@drawable/img_bg"
                />
            <TextView
                android:id="@+id/center_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_bg_bottom"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/tournament_img_text_margin"
                android:textSize="@dimen/tournament_img_text_size"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/secondLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tournament_bottom_margin"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
            <ImageView
                android:id="@+id/center_top_next_img"
                android:layout_width="@dimen/tournament_img_width"
                android:layout_height="@dimen/tournament_img_height"
                android:layout_centerHorizontal="true"
                />
            <View
                android:id="@+id/img_bg_top2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tournament_img_height"
                android:background="@drawable/img_bg"
                />
            <TextView
                android:id="@+id/center_top_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_bg_top2"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/tournament_img_text_margin"
                android:textSize="@dimen/tournament_img_text_size"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/tournament_img_between"
            >
            <ImageView
                android:id="@+id/center_bottom_next_img"
                android:layout_width="@dimen/tournament_img_width"
                android:layout_height="@dimen/tournament_img_height"
                android:layout_centerHorizontal="true"
                />

            <View
                android:id="@+id/img_bg_bottom2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tournament_img_height"
                android:background="@drawable/img_bg"
                />
            <TextView
                android:id="@+id/center_bottom_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/img_bg_bottom2"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:textColor="#ffffff"
                android:layout_marginBottom="@dimen/tournament_img_text_margin"
                android:textSize="@dimen/tournament_img_text_size"
                />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_below="@id/frmalayout"
        android:id="@+id/end_infomation"
        android:layout_width="@dimen/tournament_img_width"
        android:layout_height="@dimen/tournament_info_frm_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/tournament_info_frm_bottom_margin"
        android:background="@drawable/tournament_info_frm_bg"
        android:visibility="gone"
        >
        <!--
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="23dp"
        android:paddingLeft="23dp"
        android:paddingBottom="18dp"
        -->
        <View
            android:id="@+id/ripple_background_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/tournament_info_frm_bg"
            />
        <TextView
            android:id="@+id/round_end_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/round_end_info"
            />
        <TextView
            android:id="@+id/round_end_info2"
            android:layout_below="@id/round_end_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#b0FFFFFF"
            android:textSize="@dimen/round_end_info"
            />
        <TextView
            android:id="@+id/im_selected_menu_info"
            android:layout_below="@id/round_end_info2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\n내가 고른 메뉴"
            android:gravity="center_horizontal"
            android:textColor="#E6FFFFFF"
            android:textSize="@dimen/im_selected_menu_info"
            />
        <TextView
            android:id="@+id/im_selected_menu"
            android:layout_below="@id/im_selected_menu_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#b0FFFFFF"
            android:textSize="@dimen/im_selected_menu_info"
            />
        <com.skyfishjy.library.RippleBackground
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ripple"
            android:layout_width="@dimen/tournament_info_frm_width"
            android:layout_height="@dimen/ripple_height"
            app:rb_color="#FFFFFF"
            app:rb_radius="32dp"
            app:rb_rippleAmount="4"
            app:rb_duration="3000"
            app:rb_scale="6"
            android:paddingBottom="@dimen/ripple_bottom_padding"
            android:layout_marginBottom="@dimen/ripple_bottom_margin"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
</RelativeLayout>