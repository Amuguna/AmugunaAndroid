<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <LinearLayout
        android:id="@+id/main_logo_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/main_top_margin"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/logo_main"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/back_to_tutorial_linear"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/tournamentBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/tournament_btn"/>

        <ImageView
            android:id="@+id/randomBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/copy_right_text_size"
            android:gravity="center"
            android:src="@drawable/random_btn"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/back_to_tutorial_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="20pt"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/copy_right_text_size">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/back_to_tutorial"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#66000000"
            android:textSize="@dimen/copy_right_text_size"
            android:text="튜토리얼 다시보기"
            />

    </LinearLayout>

</RelativeLayout>

