<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_menu_height"
    android:background="@color/color_black"
    >

    <LinearLayout
        android:id="@+id/go_home_top_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/top_menu_left_margin"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/goHomeTop"
            android:layout_width="@dimen/top_menu_home_size"
            android:layout_height="@dimen/top_menu_home_size"
            android:layout_marginBottom="@dimen/top_menu_text_bottom_margin"
            android:layout_gravity="center"
            android:src="@drawable/go_home_top"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/top_menu_home_text_size"
            android:text="홈으로"
            android:textColor="#66FFFFFF"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="@dimen/top_menu_logo_width"
            android:layout_height="@dimen/top_menu_logo_height"
            android:src="@drawable/logo_top"
            android:layout_gravity="center"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/retry_top_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/top_menu_right_margin"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/retryTop"
            android:layout_width="@dimen/top_menu_retry_size"
            android:layout_height="@dimen/top_menu_retry_size"
            android:layout_marginBottom="@dimen/top_menu_text_bottom_margin"
            android:layout_gravity="center"
            android:src="@drawable/retry_top"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/top_menu_retry_text_size"
            android:text="다시하기"
            android:textColor="#66FFFFFF"/>
    </LinearLayout>

</RelativeLayout>
