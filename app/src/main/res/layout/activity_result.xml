<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black">
    >

    <include
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        layout="@layout/top_menu_bar"
        />
    <View
        android:id="@+id/result_dividing"
        android:layout_below="@id/top_menu"
        android:background="#33D8D8D8"
        android:layout_height="@dimen/top_menu_border"
        android:layout_width="fill_parent"/>

    <LinearLayout
        android:id="@+id/result_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/result_img_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/result_img"
            android:layout_width="@dimen/result_img_width"
            android:layout_height="@dimen/result_img_height"
            android:layout_gravity="center"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/result_bottom_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/result_center_img_height"
        android:layout_below="@+id/result_img_layout"
        android:layout_marginTop="@dimen/result_center_top_margin"
        android:layout_gravity="center"
        >
        <!--android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/result_center_bottom_margin"-->
        <ImageView
            android:id="@+id/result_pattern"
            android:layout_width="@dimen/result_center_img_width"
            android:layout_height="@dimen/result_center_img_height"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/result_pattern"
            />
        <TextView
            android:id="@+id/result_top_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#99ffffff"
            android:textSize="@dimen/result_center_top_text_size"
            />
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/result_top_text"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/result_center_bottom_text_size"
            />
        <!--android:layout_marginBottom="@dimen/result_center_bottom_text_margin"-->
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/result_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/result_bottom_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="@dimen/result_bottom_text_between"
            android:text="원하는 결과가 아닌가요? 그렇다면"
            android:textSize="@dimen/result_bottom_text_size"
            android:textColor="#99FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/result_cross"
                android:layout_width="@dimen/result_bottom_btn_width"
                android:layout_height="@dimen/result_bottom_btn_height"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/result_bottom_btn_between"
                android:src="@drawable/result_random_btn"
                />
            <ImageView
                android:id="@+id/result_again"
                android:layout_width="@dimen/result_bottom_btn_width"
                android:layout_height="@dimen/result_bottom_btn_height"
                android:layout_gravity="center"
                android:src="@drawable/result_again_btn"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
