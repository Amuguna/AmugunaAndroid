<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_black">
    >

    <include
        android:id="@+id/top_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_menu_height"
        layout="@layout/top_menu_bar"
        />

    <View
        android:id="@+id/result_dividing"
        android:background="#33D8D8D8"
        android:layout_height="1dp"
        android:layout_width="fill_parent"
        android:layout_below="@+id/top_menu"/>


    <LinearLayout
        android:id="@+id/result_img_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="15dp"
        android:layout_below="@+id/result_dividing"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/result_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <RelativeLayout
        android:id="@+id/result_pattern_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_below="@+id/result_img_layout">

        <ImageView
            android:id="@+id/result_pattern"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/result_pattern"
            />
        <TextView
            android:id="@+id/result_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/result_pattern"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:layout_gravity="center" />

    </RelativeLayout>





    <LinearLayout
        android:id="@+id/result_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp"
        android:layout_gravity="center|bottom"
        android:gravity="center|bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/result_bottom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="원하는 결과가 아닌가요? 그렇다면"
            android:textSize="15dp"
            android:textColor="#66FFFFFF"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:gravity="center|bottom"
            android:layout_below="@+id/result_bottom_text"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/result_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginRight="5dp"
                android:src="@drawable/result_again_btn"
                />
            <ImageView
                android:id="@+id/result_cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginLeft="5dp"
                android:src="@drawable/result_random_btn"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
